@model DesignPatternsProject.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<h2>@Model.Name</h2>

<li>Genre: @Model.Genre.Name</li>
<li>Release Date: @Model.ReleaseDate.Date.ToLongDateString()</li>
<li>Date Added: @Model.DateAdded.Date.ToLongDateString()</li>
<li>Number in Stock: @Model.NumberInStock</li>